<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../partials/head'); %>
</head>

<body>
  <%- include('../../partials/header'); %>
</body>

<main>
  <form id="goingtocreate" action="/event/delete/<%= event._id%>" method="POST">

    <container class="mt-3">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="http://localhost:3000/">Home</a></li>
          <li class="breadcrumb-item"><a href="/event">Event</a></li>
          <li class="breadcrumb-item active" aria-current="page">Edit event</li>
        </ol>
      </nav>
      <button type="submit" class="btn btn-danger" style="float:right">Delete</button>
    </container>
  </form>
  <form action="/event/edit/<%= event._id %>" method="POST">
    <div class="col row">
      <div class="col-6">
        <div class="form-group mb-3">
          <label for="eventTitle" class="col col-form-label">Event title</label>
          <input type="text" class="form-control" name="eventTitle" id="eventTitle" value="<%= event.eventTitle %>"
            required />
        </div>

        <div class="form-group mb-3">
          <label for="organizer" class="col-sm-2 col-form-label">Organizer</label>
          <input type="text" class="form-control" name="organizer" id="organizer" value="<%= event.organizer %>"
            required />
        </div>

        <div class="form-group mb-3">
          <label for="datetime" class="col-sm-2 col-form-label">Datetime</label>
          <input type="datetime-local" class="form-control" name="datetime" id="datetime"
            placeholder="06/12/2024, 13:00" value="<%= event.datetime %>" required />
        </div>

        <div class="form-group mb-3">
          <label for="location" class="col-sm-2 col-form-label">Location</label>
          <input type="text" class="form-control" name="location" id="location" placeholder="Apartment, studio or floor"
            value="<%= event.location %>" required />
        </div>
      </div>

      <div class="col-6">
        <div class="form-group mb-3">
          <label for="description" class="col-sm-2 col-form-label">Description</label>
          <textarea rows="5" type="textarea" class="form-control" name="description" id="description"
            required><%= event.description %></textarea>
        </div>

        <div class="form-group mb-3">
          <label for="quota" class="col-sm-2 col-form-label">Quota</label>
          <input type="text" class="form-control" name="quota" id="quota" placeholder="10" value="<%= event.quota %>"
            required />
        </div>

        <div class="form-group">
          <label for="image" class="col col-form-label">Image</label>
          <input type="url" class="form-control" name="image" id="image" placeholder="http://image.com/example.jpg"
            value="<%= event.image %>" required />
        </div>
      </div>
      <div class="d-flex flex-row-reverse">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck1" name="highlight" value="<%= event.highlight %>">
      <label class="form-check-label" for="gridCheck1">
        Highlight
      </label>
    </div>
  </form>
  </div>
</main>

</html>