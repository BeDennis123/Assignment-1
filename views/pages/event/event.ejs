<!DOCTYPE html>
<html lang="en" id="event">

<head>
  <%- include('../../partials/head'); %>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <%- include('../../partials/header'); %>
</body>

<main>
  <form class="col mt-3" id="goingtocreate" action="/event/new" method="GET">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="http://localhost:3000/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Events</li>
      </ol>
    </nav>
    <button type="submit" class="btn btn-primary" style="float:right">New</button>
  </form>

  <form id="eventList" action="/event" method="GET">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% for (var event of events) { %>
        <div class="col">
          <div class="card">
            <a href="/event/detail/<%= event._id%>">
              <img src="<%= event.image %>" class="card-img-top" alt="image cap">
            </a>
            <div class="card-body">
              <h5 class="card-title">
                <%= event.eventTitle %>
              </h5>
              <p class="card-text">
                <%= event.description %>
              </p>
              <h6 class="card-subtitle mb-2 text-body-secondary">Last update 3 mins ago</h6>
              <button type="button" class="btn btn-outline-primary" style="float:right"><a
                  href="/event/edit/<%= event._id %>">Edit</a></button>
            </div>
          </div>
        </div>
        <% } %>
    </div>
    <% for (let i=1; i <=Math.ceil(total / perPage); i++) { %>
      <% if(i===page) { %>
        <span>
          <%= i %>
        </span>
        <% } else { %>
          <a href="/event?page=<%= i %>&perPage=<%= perPage %>">
            <%= i %>
          </a>
          <% } %>
            <% } %>
  </form>

</main>

</html>